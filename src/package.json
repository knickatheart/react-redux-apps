{
  "name": "react-redux-apps",
  "version": "1.0.0",
  "description": "Collection of React-Redux web applications.",
  "main": "app.js",
  "scripts": {
    "start": "nodemon server.js",
    "serve": "browser-sync start --server --files \"html/*.html, scss/bundle.css, js/bundle/bundle.js\"",
    "start-prod": "parallelshell \"npm run uglify-js\" \"npm run uglify-css\" \"npm run copy-assets\"",
    "start-dev": "parallelshell \"nodemon app.js\" \"npm run watch-js\" \"npm run watch-scss\" \"npm run watch-html\"",
    "watch-js": "onchange \"js/**/*.jsx\" -- npm run build-js",
    "watch-scss": "onchange \"scss/**/*.scss\" -- npm run build-css",
    "build-js": "webpack && npm run uglify-js",
    "babelify-js": "browserify js/root.jsx -t [ babelify --presets [ es2015 react ] --plugins [ transform-object-rest-spread ] ] -o js/bundle/bundle.js",
    "uglify-js": "uglifyjs js/bundle/bundle.js > ../prod/js/bundle.min.js",
    "build-css": "npm run sass2css && npm run uglify-css",
    "sass2css": "node-sass --include-path scss scss/main.scss scss/bundle.css",
    "uglify-css": "uglifycss scss/bundle.css > ../prod/css/bundle.min.css",
    "watch-html": "onchange \"html/*.html\" -- npm run copy-assets",
    "copy-assets": "parallelshell \"npm run copy-html\" \"npm run copy-images\"",
    "copy-html": "copyfiles html/*.html ../prod",
    "copy-images": "copyfiles images/* ../prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/knickatheart/react-redux-apps.git"
  },
  "author": "Gianluigi Mango",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "bootstrap": "^4.0.0-alpha.2",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "express": "^4.14.0",
    "jquery": "^3.0.0",
    "json-loader": "^0.5.4",
    "node-sass": "^3.8.0",
    "node-uuid": "^1.4.7",
    "onchange": "^2.5.0",
    "parallelshell": "^2.0.0",
    "react": "^15.1.0",
    "react-addons-css-transition-group": "^15.2.1",
    "react-dom": "^15.1.0",
    "react-proxy": "^1.1.8",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.2",
    "redux": "^3.5.2",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "replace": "^0.3.0",
    "tether": "^1.3.3",
    "uglifycss": "0.0.20",
    "uglifyjs": "^2.4.10",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
